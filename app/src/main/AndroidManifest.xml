          package="com.bancosantander.puestos">

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"> <!-- pandroid:theme="@style/AppTheme" -->
        <activity android:name="com.bancosantander.puestos.ui.activities.map.MapaActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.bancosantander.puestos.ui.activities.login.LoginActivity"/>
        <activity
            android:name="com.bancosantander.puestos.ui.dialogs.PuestoDialog"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Dialog"/>
    </application>

</manifest>